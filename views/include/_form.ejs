 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Tên nhân viên</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Đề Văn Mô">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="dob" class="text-light">Ngày sinh</label>
            <input type="date" name="dob" value="">
        </div>
        <div class="form-group">
            <label for="phone" class="text-light">Số điện thoại</label>
            <input type="text" name="phone" value="" placeholder="0000000000">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Địa chỉ</label>
            <input type="text" name="address" value="" placeholder="none">
        </div>
        <div class="form-group">
            <label for="position" class="text-light">Chức vụ</label>
            <input type="text" name="position" value="" placeholder="Nhan vien">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Giới tính</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Nam" >
                <label for="radio-2" class="radio-label">Nam</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Nữ" >
                <label for="radio-3" class="radio-label">Nữ</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Trạng thái</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Đang hoạt động" >
                <label for="radio-4" class="radio-label">Đang hoạt động</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Tạm nghỉ" >
                <label for="radio-5" class="radio-label">Tạm nghỉ</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Thêm nhân viên</button>
        </div>

    </div>
</form>