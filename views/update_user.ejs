
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Trang chủ</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Cập nhật thông tin nhân viên</h2>
            <span class="text-light">Thay đổi thông tin nhân viên ở dưới</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Tên</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Đồ Văn Mê">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="dob" class="text-light">Ngày sinh</label>
            <input type="date" name="dob" value="<%= user.dob%>">
        </div>
        <div class="form-group">
            <label for="phone" class="text-light">Số điện thoại</label>
            <input type="text" name="phone" value="<%= user.phone%>" placeholder="0000000000">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Địa chỉ</label>
            <input type="text" name="address" value="<%= user.address%>" placeholder="none">
        </div>
        <div class="form-group">
            <label for="position" class="text-light">Chức vụ</label>
            <input type="text" name="position" value="<%= user.position%>" placeholder="Nhan vien">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Giới tính</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Nam" <%= user.gender == 'Nam' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Nam</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Nữ"  <%= user.gender == 'Nữ' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Nữ</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Trạng thái</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Đang hoạt động" <%= user.status == 'Đang hoạt động' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Đang hoạt động</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Tạm nghỉ" <%= user.status == 'Tạm nghỉ' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Tạm nghỉ</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Lưu</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
